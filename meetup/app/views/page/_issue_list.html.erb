<div class="issue-list">
    <% issues.each do |issue| %>
    <article class="issue clearfix">
        <div class="avatar">
            <%= link_to issue.user.username do %>
                <%= image_tag issue.user.gravatar %>
            <% end %>
        </div>
        <div class="body">
            <h5 class="title">
            <%= link_to issue.title, issue_path(issue) %>
            </h5>
            <a class="read-more" href="#">read</a>
            <span class="meta-data">
            <a href="/happypeter">happypeter</a>
            <%= time_ago_in_words(issue.created_at) %>Ââç
            </span>
        </div>
        <div class="issue-comment-count">
            <div class="fa fa-comments icon-muted"></div>
            <%= link_to issue.comments.count, issue %>
        </div>
    </article>
    <% end %>
</div>
