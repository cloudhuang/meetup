<div class="signup-form-container clearfix">
    <div class="signup-form">
        <%= form_for @user do |f| %>
        <dl class="form">
            <dt><%= f.label :username, "用户名" %></dt>
            <dd><%= f.text_field :username %></dd>
            <% if @user.errors[:username].any? %>
              <dd class="error"><%= @user.errors[:username].join("<br/>") %></dd>
            <% end %>
        </dl>
        <dl class="form">
            <dt><%= f.label :email, "邮箱地址" %></dt>
            <dd><%= f.text_field :email %></dd>
            <% if @user.errors[:email].any? %>
              <dd class="error"><%= @user.errors[:email].join("<br/>") %></dd>
            <% end %>
        </dl>
        <dl class="form">
            <dt><%= f.label :password, "密码" %></dt>
            <dd><%= f.password_field :password %></dd>
            <% if @user.errors[:password].any? %>
              <dd class="error"><%= @user.errors[:password].join("<br/>") %></dd>
            <% end %>
        </dl>
        <dl class="form">
            <dt><%= f.label :password_confirmation, "请再输入一次" %></dt>
            <dd><%= f.password_field :password_confirmation %></dd>
            <% if @user.errors[:password_confirmation].any? %>
              <dd class="error"><%= @user.errors[:password_confirmation].join("<br/>") %></dd>
            <% end %>
        </dl>
        <p><%= f.submit "注册", :class => "signup-button btn btn-primary" %></p>
        <div class="need-signup">
        已账号？请直接<%= link_to "登陆", login_path %>
      </div>
        <% end %>
    </div>
</div>
